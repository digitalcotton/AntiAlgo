# Curiosity Intelligence Engine - Environment Variables
# Copy to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# OpenAI - for embeddings
OPENAI_API_KEY=sk-your-key-here

# Supabase - database with pgvector
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# EMAIL (Resend)
# ============================================
RESEND_API_KEY=re_your-key-here
FROM_EMAIL=AntiAlgo <hello@antialgo.ai>
SITE_URL=https://antialgo.ai

# ============================================
# INGESTION SOURCES (Optional)
# ============================================

# Reddit
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=AntiAlgo/1.0 by /u/your_username

# Stack Exchange
STACKEXCHANGE_KEY=your_key

# News API
NEWSAPI_KEY=your_newsapi_key

# ============================================
# CONFIGURATION
# ============================================

EMBEDDING_MODEL=text-embedding-3-small
EDITORIAL_MODEL=gpt-4o
SIMILARITY_THRESHOLD=0.85
SIGNAL_THRESHOLD=0.70
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# SERVER
# ============================================

PORT=8000
HOST=0.0.0.0
WORKERS=4

# ============================================
# SECURITY (Production)
# ============================================

JWT_SECRET=your-256-bit-secret
CORS_ORIGINS=https://antialgo.ai,https://www.antialgo.ai
