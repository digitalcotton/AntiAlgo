# Curiosity Intelligence Engine - Environment Variables
# Copy to .env and fill in your values

# ============================================
# REQUIRED
# ============================================

# OpenAI - for embeddings
OPENAI_API_KEY=sk-...

# Supabase - database with pgvector
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# REDDIT INGESTION
# ============================================

# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=CuriosityIntelligence/1.0 by /u/your_username

# ============================================
# STACK EXCHANGE INGESTION
# ============================================

# Create app at: https://stackapps.com/apps/oauth/register
STACKEXCHANGE_KEY=your_stackexchange_key

# ============================================
# NEWS CORRELATION
# ============================================

# Get key at: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key

# ============================================
# OPTIONAL - ADDITIONAL DATA SOURCES
# ============================================

# AlsoAsked API - Google PAA data
# ALSOASKED_API_KEY=your_alsoasked_key

# AnswerThePublic (if available)
# ATP_API_KEY=your_atp_key

# ============================================
# CONFIGURATION
# ============================================

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# Similarity threshold for clustering
SIMILARITY_THRESHOLD=0.85

# Signal score threshold
SIGNAL_THRESHOLD=0.70

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# PRODUCTION - Security
# ============================================

# Supabase service role (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT secret (generate: openssl rand -hex 32)
JWT_SECRET=your-256-bit-secret

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# PRODUCTION - Observability
# ============================================

# Sentry error tracking
SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_TRACES_SAMPLE_RATE=0.1

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector:4317
OTEL_SERVICE_NAME=curiosity-intelligence

# ============================================
# PRODUCTION - Infrastructure
# ============================================

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Server
PORT=8000
HOST=0.0.0.0
WORKERS=4
